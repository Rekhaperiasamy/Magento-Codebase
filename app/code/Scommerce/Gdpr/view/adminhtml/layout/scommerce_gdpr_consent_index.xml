    <body>
        <referenceBlock name="menu">
            <action method="setActive">
                <argument name="itemId" xsi:type="string">Scommerce_Gdpr::privacy</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="page.title">
            <action method="setPageTitle">
                <argument name="pageTitle" xsi:type="string">Privacy Policy Consent</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <uiComponent name="scommerce_gdpr_consent_list"/>
        </referenceContainer>
    </body>
</page>
