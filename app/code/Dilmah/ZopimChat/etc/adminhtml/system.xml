<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="zopim_chat_config" translate="label" type="text" sortOrder="900" showInDefault="1"
                 showInWebsite="1"
                 showInStore="1">
            <label>Zopim Chat Configuration</label>
            <tab>dilmah</tab>
            <resource>Dilmah_ZopimChat::config</resource>
            <group id="zopim" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Zopim Chat Configuration</label>
                <field id="key" translate="label" type="text" sortOrder="2" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Zopim Key</label>
                </field>
                <field id="activate" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Activate Zopim</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Activate / Deactivate Zopin Chat</comment>
                    <config_path>zopim_chat_config/zopim/activate</config_path>
                </field>
            </group>
        </section>
    </system>
</config>














