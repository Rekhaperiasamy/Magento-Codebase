<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Home</item>
                    <item name="title" xsi:type="string" translate="true">Home</item>
                    <item name="link" xsi:type="string">/</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Connecting...</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Connecting...</item>
                    <item name="title" xsi:type="string" translate="true">Connecting...</item>
                </argument>
            </action>
        </referenceBlock>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Connecting with Global Payments...</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Dilmah\Payments\Block\Form\GlobalPay" name="globalpay.form" template="form/globalpay/start.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
