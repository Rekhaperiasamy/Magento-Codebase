<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="news_and_events" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <label>News &amp; Events</label>
            <tab>dilmah</tab>
            <resource>Dilmah_NewsEvents::config</resource>
            <group id="rss_feed" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>RSS Feeds</label>
                <field id="feed_url" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Feed URL</label>
                    <backend_model>Dilmah\NewsEvents\Model\Config\Backend\RSS\URL</backend_model>
                    <comment>URL of the RSS feed for News &amp; Events page</comment>
                </field>
                <field id="feed_url_home" translate="label" type="text" sortOrder="2" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Feed URL (Home Page)</label>
                    <backend_model>Dilmah\NewsEvents\Model\Config\Backend\RSS\URL</backend_model>
                    <comment>URL of the RSS feed for Home page</comment>
                </field>
            </group>
        </section>
    </system>
</config>














